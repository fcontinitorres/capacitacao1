<div class="content-wrapper" style="min-height: 1036.3px;">
  <%= form_for(client) do |f| %>
    <% if client.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

        <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :detail %>
      <%= f.text_area :detail %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.number_field :state %>
    </div>

    <div class="field">
      <%= f.label :reserve %>
      <%= f.date_select :reserve %>
    </div>

    <div class="field">
      <%= f.label :birthday %>
      <%= f.date_select :birthday %>
    </div>

    <div class="field">
      <%= f.label :first_contact %>
      <%= f.date_select :first_contact %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>